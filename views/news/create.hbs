<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
    <form
      action="/news/create/{{id}}"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="formbold-mb-5">
        <label for="title" class="formbold-form-label font-weight-bold">
          Article Title
        </label>
        <input
          type="text"
          name="title"
          id="name"
          placeholder="Title"
          class="formbold-form-input"
        />
      </div>

      <div class="formbold-mb-5">
        <label for="image" class="formbold-form-label font-weight-bold">
          Add an image
        </label>
        <input type="file" name="imageUrl" class="formbold-form-input" />
      </div>

      <div class="formbold-mb-5">
        <label for="description" class="formbold-form-label font-weight-bold">
          Description
        </label>
        <textarea
          rows="6"
          name="description"
          id="message"
          placeholder="Type your article here"
          class="formbold-form-input"
        ></textarea>
      </div>

      <div>
        <button type="submit" class="btn btn-dark">Submit Article</button>

      </div>
    </form>
  </div>
</div>

