<div class="cards">
  {{#each news}}

    <div class="card">
      <div class="card-hero">
        <img src="{{imageUrl}}" alt="{{title}}" width="288" />
      </div>
      <div class="card-header">
        <h3>{{title}}</h3>
      </div>
      <div class="card-body">
        <p>{{description}}</p>
      </div>
      <div class="card-footer">

        <img src="{{author.image}}" class="avatar" width="32" height="32" />
        <strong>By: {{author.username}}</strong>

        {{#ifEquals author._id @root.currentUser._id}}
          <a href="/news/edit/{{_id}}" class="btn btn-primary">Edit Article</a>
        {{/ifEquals}}
      </div>
    </div>

  {{/each}}
</div>