      <div class="card" style="width: 19rem;">

        <img
          class="card-img-top"
          src="{{enclosure.0.$.url}}"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          <a target="_blank" href="{{link}}" class="btn btn-primary">Read More</a>
        </div>

      </div>
    </div>
  {{/each}}
</div>